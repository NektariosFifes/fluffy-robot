{
  "title": "Simulation Plot 0.0.2 schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "AsyncApi Api Simulator. Define routes and settings regarding traffic Simulated",
  "patternProperties": {
    "^(\\/[\\w\\d]+)*$": {
      "anyOf": [
        {      "type": "object",
        "additionalProperties": false,
        "properties": {
          "requestMethod": {
            "type": "string",
            "anyOf": [
              {
                "const": "GET"
              },
              {
                "const": "POST"
              }
            ]
          },
          "headers": {
            "type": "object"
          },
          "body": {
            "type": "object"
          },
          "averageRps": {
            "type": "integer",
            "maximum": 10
          }}
        },
        {
          "type": "object",
          "additionalItems": false,
          "properties": {
            "group": {
              "type": "array",
              "maxItems": 10
            },
            "headers": {
              "type": "object"
            },
            "body": {
              "type": "object"

            },
            "averageRps": {
              "type": "integer",
              "maximum": 10
            },
            "requestMethod": {
              "type": "string",
              "anyOf": [
                {
                  "const": "GET"
                },
                {
                  "const": "POST"
                }
              ]
            }
          }
        }]
    }
  },
  "additionalProperties": false,
  "properties": {
    "version":{
      "type": "string"

    },
    "domainUrl": {
      "anyOf": [
        {
          "description": "Domain url beginning either with www. , http , https",
          "type": "string",
          "pattern": "^(?:https?:\\/\\/)?(?:[^@\\/\\n]+@)?(?:www\\.)?([^:\\/?\\n]+)"
        }
      ]

    }



  },
  "required": ["domainUrl"]
}
